:root{
  --ink:#163e7a;
  --shadow:0 18px 46px rgba(0,0,0,.28);
  --stroke-xl:14px; --stroke-md:10px; --stroke-sm:6px;
  --desk-w:70%;

  /* Page 2 (profil siswa) */
  --avatar-d: clamp(150px, 18vw, 220px);
  --avatar-y: -12px;

  /* Page 3 (menu utama – orbit) */
  --counter-bottom: 24%;
  --orbit-top: 44%;
  --orbit-left: 44%;
  --orbit-radius: clamp(190px, 21vw, 300px);
  --bubble-size: clamp(100px, 14vw, 190px);

  /* Page 4/5/6 (board besar & grid info) */
  --p4-icon: 26px;
  --p4-gap: 10px;
  --p4-label: 180px;
  --p4-colon: 14px;
  --p4-row-gap: clamp(0px, .1vw, 1px);
}

*{box-sizing:border-box}
body{
  margin:0; min-height:100dvh; display:grid; place-items:center;
  background:#eaf3ff; color:var(--ink);
  font-family:"Poppins",system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial;
}

/* ===== Screens ===== */
.screen{ width:100%; display:none; place-items:center; animation:fade .28s ease; }
.screen.active{ display:grid; }
@keyframes fade{ from{opacity:.7; transform:translateY(2px)} to{opacity:1; transform:none} }

/* ===== Stage 16:9 ===== */
.stage{
  position:relative; width:min(1320px,98vw); aspect-ratio:16/9;
  border-radius:28px; overflow:hidden; background:#b9d5e6; box-shadow:var(--shadow);
  isolation:isolate;
}
.bg{ position:absolute; inset:0; background:url("../assets/bg-lab.png") center/cover no-repeat; z-index:0; }
.stage{ position:relative; width:min(1320px,98vw); aspect-ratio:16/9;
  border-radius:28px; overflow:hidden; background:#b9d5e6; box-shadow:var(--shadow);
  isolation:isolate;
}

.char{ position:absolute; bottom:0; z-index:3; pointer-events:none; filter:drop-shadow(0 10px 20px rgba(0,0,0,.12)); }
.char.left{ left:-2%; width:min(30%, 340px); }
.char.right{ right:-1%; width:min(28%, 320px); }

.desk{ position:absolute; left:50%; transform:translateX(-50%); bottom:-1.3%; width:var(--desk-w); z-index:2; pointer-events:none; }

/* ===== Page 1 (judul) ===== */
.title{
  position:absolute; left:50%; top:6.2%; transform:translateX(-50%);
  z-index:4; display:flex; flex-direction:column; align-items:center; width:94%; text-align:center; user-select:none;
}
.sticker{
  font-family:"Fredoka",system-ui,sans-serif; font-weight:800; line-height:1.02; letter-spacing:.02em; margin:0; color:#163e7a;
  -webkit-text-stroke: var(--stroke-xl) #fff; paint-order:stroke fill;
  text-shadow:0 0 6px rgba(255,255,255,.96),0 0 14px rgba(255,255,255,.92),0 0 28px rgba(255,255,255,.88);
}
.t-virtual{ font-size:clamp(46px,8.6vw,138px); }
.t-berbasis{ font-size:clamp(22px,4.6vw,64px); -webkit-text-stroke:var(--stroke-sm) #fff; color:#ff7f66; margin-top:.05em; }
.t-stem{ font-size:clamp(40px,7.2vw,112px); -webkit-text-stroke:var(--stroke-md) #fff; margin-top:.02em; }
.t-materi{ font-size:clamp(22px,4.6vw,62px); -webkit-text-stroke:var(--stroke-sm) #fff; color:#ff7f66; margin-top:.1em; }

/* Tombol Play */
.play{ position:absolute; left:50%; bottom:clamp(18px,3.6vh,40px); transform:translateX(-50%);
  width:clamp(110px,15vw,220px); aspect-ratio:1/1; border:none; background:transparent; padding:0; cursor:pointer; z-index:5; }
.play img{ width:100%; height:100%; object-fit:contain; display:block; pointer-events:none;
  filter:drop-shadow(0 18px 42px rgba(0,0,0,.35)); transition:transform .16s ease, filter .16s ease; }
.play:hover img{ transform:scale(1.05); filter:drop-shadow(0 22px 48px rgba(0,0,0,.42)); }
.play:active img{ transform:scale(.98); }
.sr-only{ position:absolute; width:1px; height:1px; padding:0; margin:-1px; overflow:hidden; clip:rect(0,0,0,0); white-space:nowrap; border:0; }

/* ===================== PAGE 2 (Profil Siswa) ===================== */
.board{ position:absolute; left:50%; top:10%; transform:translateX(-50%); width:min(90%,1100px); z-index:2; filter:drop-shadow(0 12px 28px rgba(0,0,0,.18)); pointer-events:none; }
.board-area{
  position:absolute; left:50%; top:18%; transform:translateX(-50%); width:min(80%,900px); height:62%;
  z-index:3; display:grid; grid-template-rows:auto 1fr; row-gap:min(2.2vh,22px); align-content:start;
}
.p2-heading{
  font-family:"Fredoka",system-ui,sans-serif; font-weight:800; color:#ff7f66; margin:0;
  font-size:clamp(28px,5.2vw,64px); -webkit-text-stroke:6px #fff; paint-order:stroke fill;
  text-shadow:0 0 6px rgba(255,255,255,.96),0 0 16px rgba(255,255,255,.9); text-align:center;
}
.profile-grid{
  width:100%; display:grid; grid-template-columns: var(--avatar-d) 1fr; column-gap:min(4vw,36px); align-items:start;
}
.avatar{ width:var(--avatar-d); height:var(--avatar-d); border-radius:50%; overflow:hidden; background:#e3e8ef;
  box-shadow:0 6px 16px rgba(0,0,0,.08) inset; transform:translateY(var(--avatar-y)); display:grid; place-items:center; }
.avatar img{ width:100%; height:100%; object-fit:cover; display:block; }
.form{ width:100%; display:grid; row-gap:min(3vh,22px); font-weight:700; color:#0d1b2b; }
.field{ display:grid; row-gap:6px; }
.label{ font-size:clamp(14px,1.8vw,18px); opacity:.9; }
.input{ width:100%; border:none; outline:none; background:transparent; font-size:clamp(16px,2vw,20px);
  padding:.35rem .1rem .15rem; border-bottom:4px solid #0d1b2b; }
.gold-btn{ position:relative; display:inline-grid; place-items:center; justify-self:start; width:min(260px,38vw); aspect-ratio:3.8/1.3;
  border:none; background:transparent; cursor:pointer; filter:drop-shadow(0 8px 14px rgba(0,0,0,.18)); }
.gold-btn img{ position:absolute; inset:0; width:100%; height:100%; object-fit:contain; }
.gold-btn span{ position:relative; z-index:1; font-family:"Fredoka",system-ui,sans-serif; font-weight:800; font-size:clamp(18px,2.6vw,28px); color:#2a1b00; }

.p2-back{ position:absolute; right:18px; top:18px; z-index:5; background:#fff; border:1px solid rgba(0,0,0,.08); border-radius:12px; padding:.45rem .75rem; cursor:pointer; font-weight:600; box-shadow:0 10px 22px rgba(0,0,0,.08); }

/* ===================== PAGE 3 (Menu Utama – setengah orbit) ===================== */
.menu-title{ position:absolute; left:5%; top:12%; z-index:7;
  font-family:"Fredoka",system-ui,sans-serif; font-weight:800; color:#124a9b;
  font-size:clamp(22px,3.2vw,42px); -webkit-text-stroke:6px #fff; paint-order:stroke fill;
  text-shadow:0 0 6px rgba(255,255,255,.96);
}
.btn-mini{
  position:absolute; right:18px; top:18px; z-index:7;
  background:#fff; border:1px solid rgba(0,0,0,.08); border-radius:12px; padding:.45rem .75rem; cursor:pointer; font-weight:600;
  box-shadow:0 10px 22px rgba(0,0,0,.08);
}
.desk-top{ position:absolute; left:50%; transform:translateX(-50%); bottom:var(--counter-bottom); width:min(78%,920px); z-index:3; pointer-events:none; }
.desk-front{ position:absolute; left:50%; transform:translateX(-50%); bottom:0; width:min(92%,1000px); z-index:6; pointer-events:none; opacity:.96; }
.mascot{ position:absolute; left:50%; transform:translateX(-50%); bottom:19%; width:clamp(220px,28vw,420px); z-index:4; pointer-events:none; filter:drop-shadow(0 14px 30px rgba(0,0,0,.16)); }
.orbit.semi{
  --r: var(--orbit-radius);
  --arc-start: 160deg; --arc-end: 380deg; --n: 7;
  position:absolute; left:var(--orbit-left); top:var(--orbit-top);
  transform:translate(-50%,-50%); width:0; height:0; z-index:5;
}
.orbit.semi .bubble{
  --deg: calc( var(--arc-start) + (var(--arc-end) - var(--arc-start)) * var(--i) / (var(--n) - 1) );
  position:absolute; left:0; top:0; width:var(--bubble-size); aspect-ratio:1/1;
  transform: rotate(var(--deg)) translate(var(--r)) rotate(calc(-1 * var(--deg)));
  cursor:pointer; filter:drop-shadow(0 12px 20px rgba(0,0,0,.18));
  transition:transform .14s ease, filter .14s ease;
}
.orbit.semi .bubble:hover{ transform: rotate(var(--deg)) translate(calc(var(--r) + 6px)) rotate(calc(-1 * var(--deg))) scale(1.06); filter:drop-shadow(0 16px 28px rgba(0,0,0,.24)); }
.orbit.semi .bubble img{ width:100%; height:100%; object-fit:contain; pointer-events:none; }

/* ===================== PAGE 4 (Profil Pengembang) ===================== */
.p4-wrap .board{ top:7%; width:min(95%,1600px); }
.p4-area{
  position:absolute; left:50%; top:19%; transform:translateX(-50%);
  width:min(74%,860px); height:66%; z-index:3;
  display:grid; grid-template-rows:auto 1fr; row-gap:min(1.2vh,10px);
  color:#111;
}
.p4-title{
  margin:0; text-align:center; font-family:"Fredoka",system-ui,sans-serif; font-weight:800;
  color:#ff7f66; font-size:clamp(23px,4.2vw,52px);
  -webkit-text-stroke:6px #fff; paint-order:stroke fill; text-shadow:0 0 8px rgba(255,255,255,.95);
}
.home-btn{ position:absolute; right:24px; top:20px; z-index:6; background:transparent; border:none; cursor:pointer;
  width:clamp(44px,4.8vw,60px); aspect-ratio:1/1; filter:drop-shadow(0 10px 22px rgba(0,0,0,.18)); }
.home-btn img{ width:100%; height:100%; object-fit:contain; display:block; }

.p4-sections{ display:grid; grid-template-columns: 1fr; row-gap:12px; }

.p4-section{ display:grid; grid-template-columns: 100px 1fr; column-gap:16px; align-items:start; }
.p4-section .section-title{
  grid-column:2 / -1;
  margin:0;
  font-weight:800; font-size:clamp(14px,1.8vw,17px); color:#111;
  padding-left: calc(var(--p4-icon) + var(--p4-gap));
  line-height:1.05;
}
.p4-section .info{ display:grid; row-gap: var(--p4-row-gap); margin-top:-4px; }

.dev-photo, .mentor-photo{
  width:120px; height:120px; border-radius:50%; overflow:hidden; justify-self:start; align-self:start;
  box-shadow:0 8px 18px rgba(0,0,0,.12); background:#fff;
}
.dev-photo img, .mentor-photo img{ width:100%; height:100%; object-fit:cover; }

.info{ display:grid; row-gap: var(--p4-row-gap); }
.row{
  display:grid;
  grid-template-columns: var(--p4-icon) var(--p4-label) var(--p4-colon) 1fr;
  align-items:center;
  column-gap: var(--p4-gap);
  font-size:clamp(11px,1.5vw,15px);
  line-height:1.14;
}
.row .ic{ width:var(--p4-icon); height:var(--p4-icon); background-size:contain; background-repeat:no-repeat; background-position:center; }
.ic-name{  background-image:url("../assets/icons/ic-name.png"); }
.ic-nim{   background-image:url("../assets/icons/ic-nim.png"); }
.ic-major{ background-image:url("../assets/icons/ic-major.png"); }
.ic-campus{background-image:url("../assets/icons/ic-campus.png"); }
.ic-mail{  background-image:url("../assets/icons/ic-mail.png"); }
.ic-nip{   background-image:url("../assets/icons/ic-nip.png"); }
.row span:nth-child(2){ font-weight:700; color:#111; }
.value{ font-weight:700; color:#111; }
.dots{ opacity:.7; user-select:none; color:#111; }

/* ===================== PAGE 5–xx (Konten papan) ===================== */
.intro-wrap .board{ top:7%; width:min(95%,1600px); }
.intro-area{
  position:absolute; left:50%; top:19%; transform:translateX(-50%);
  width:min(74%,860px); height:66%; z-index:3;
  display:grid; grid-template-rows:auto 1fr; row-gap:min(1.2vh,10px);
  color:#111;
}
.intro-title{
  margin:0; text-align:center; font-family:"Fredoka",system-ui,sans-serif; font-weight:800;
  color:#ff7f66; font-size:clamp(23px,4.2vw,52px);
  -webkit-text-stroke:6px #fff; paint-order:stroke fill; text-shadow:0 0 8px rgba(255,255,255,.95);
}
.intro-body{
  width:100%;
  display:grid;
  align-content:start;
  row-gap:12px;
  font-size:clamp(12px,1.6vw,16px);
  line-height:1.52;
}
.intro-sub{ font-weight:800; margin:0 0 2px; }

.intro-body ul{ margin:8px 0 0 22px; padding:0; }
.intro-body li{ margin:6px 0; }

/* tambahan untuk ordered lists */
.intro-body ol{ margin:8px 0 0 22px; padding:0; }
.intro-body ol.alpha{ list-style: lower-alpha; }
.intro-body ol.decimal{ list-style: decimal; }

/* Figure */
.intro-figure{
  margin-top: 4px;
  display:grid;
  place-items:center;
  row-gap:8px;
}
.intro-figure img{
  max-width:min(86%,900px);
  width:100%;
  height:auto;
  border-radius:10px;
  box-shadow:0 8px 20px rgba(0,0,0,.12);
}
.intro-figure figcaption{
  font-size:clamp(10px,1.4vw,14px);
  text-align:center;
  color:#222;
  opacity:.9;
}

/* Title image (contoh: "Lemak") */
.topic-title{
  width: clamp(120px, 22vw, 260px);
  height:auto;
  justify-self:start;
  filter:drop-shadow(0 6px 12px rgba(0,0,0,.12));
  margin-bottom: 4px;
}

/* Nav arrows */
.nav-btn{
  position:absolute; bottom:7%; z-index:6; border:none; background:transparent; padding:0; cursor:pointer;
  width:clamp(60px,4.8vw,76px); aspect-ratio:1/1;
  filter:drop-shadow(0 10px 22px rgba(0,0,0,.18));
}
.nav-btn img{ width:100%; height:100%; object-fit:contain; display:block; }
.nav-prev{ left:6%; }
.nav-next{ right:6%; }

/* ===== EVALUASI (hero) ===== */
.eval-hero-wrap{
  position:absolute; inset:0; z-index:3;
}
.eval-char{
  position:absolute; left:2.6%; bottom:-1.5%;
  width:clamp(320px,30vw,500px);
  z-index:1;                   /* di belakang meja & panel */
  filter:drop-shadow(0 10px 18px rgba(0,0,0,.12));
  pointer-events:none;
}
.eval-desk{
  position:absolute; bottom:-2.5%;
  left:25%; transform:translateX(-62%);  /* geser kiri */
  width:min(100%,1120px);
  z-index:3;                  /* di depan karakter */
  pointer-events:none;
  opacity:.98;
}
/* panel kecil di dinding (belakang tulisan EVALUASI) */
.eval-wall-panel{
  position:absolute; right:8.5%; top:20%;
  width:min(38%,520px); height:min(34%,300px);
  background:#ecf2ff;
  border:12px solid #5b6a80; border-radius:10px;
  box-shadow:inset 0 0 0 4px #cfd8ea, 0 8px 20px rgba(0,0,0,.12);
  display:grid; place-items:center;
  z-index:2;                  /* di dinding, di depan karakter */
}
.eval-wall-panel .eval-text{
  font-family:"Fredoka",system-ui,sans-serif; font-weight:800;
  font-size:clamp(28px,5.2vw,74px); color:#244e8a;
  -webkit-text-stroke:6px #fff; paint-order:stroke fill;
  text-shadow:0 0 8px rgba(255,255,255,.95);
}
/* ===== PAGE 33: pasang gambar tabel supaya pas di papan ===== */
#screen33 .intro-area{
  /* papan sedikit lebih lebar agar gambar lega */
  width:min(86%, 1000px);
}
#screen33 .intro-body{
  justify-items:center;   /* biar konten ke tengah */
}
#screen33 .intro-body img{
  display:block;
  width:min(96%, 980px);  /* pas di dalam papan, ada jarak kiri/kanan */
  height:auto;
  margin-top:4px;
  margin-left: 35px;  /* geser kanan sedikit supaya pas */
  border-radius:8px;
  box-shadow:0 8px 18px rgba(0,0,0,.12); /* lembut, mirip halaman lain */
}
/* ===== PAGE 35: tata letak QR & link ===== */
#screen35 .intro-body{ justify-items:center; text-align:center; }
.qr-wrap{ display:grid; place-items:center; row-gap:8px; margin-top:6px; }
.qr-wrap img{ width:clamp(140px,22vw,240px); height:auto; image-rendering:crisp-edges; }
.qr-wrap a{
  font-weight:700; color:#124a9b; text-decoration:underline; 
  word-break:break-all;
}

/* Responsif umum */
@media (max-width:980px){
  .p4-area{ --p4-icon:24px; --p4-gap:10px; --p4-label:160px; --p4-colon:12px; }
  .p4-section{ grid-template-columns: 90px 1fr; }
}
@media (max-width:900px){
  .profile-grid{ grid-template-columns:1fr; row-gap:18px; }
  .avatar{ justify-self:center; }
  .board-area{ width:84%; top:17%; }
}
@media (max-width:560px){
  .t-virtual{ -webkit-text-stroke:9px #fff }
  .t-stem{ -webkit-text-stroke:7px #fff }
  .t-berbasis,.t-materi{ -webkit-text-stroke:4px #fff }
}
